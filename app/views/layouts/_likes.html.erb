<% if logged_in? && current_user.likes?(micropost) %>
  <%= link_to "Unlike", micropost_likes_path(micropost.id), method: :delete, remote: true %>
<% else %>
  <%= link_to "Like", micropost_likes_path(micropost.id), method: :post, remote: true %>
<% end %>

<%= micropost.likes.count %>

<% micropost.likes.each do |like| %>
  <%= gravatar_for(like.user, size = 10) %>
<% end %>
